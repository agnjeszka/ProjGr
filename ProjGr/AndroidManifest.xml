<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pg.is.projgr"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Klikniecia"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="pg.is.projgr.KLIKNIECIA" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Raporty"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="pg.is.projgr.RAPORTY" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AndroidListViewActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="pg.is.projgr.ANDROIDLISTVIEWACTIVITY" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Kalendarz"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="pg.is.projgr.KALENDARZ" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SingleListItem"
                    android:label="Single Item Selected"></activity>
        <activity
            android:name=".DodajKategorie"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="pg.is.projgr.DODAJKATEGORIE" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Statystyki"
            android:label="@string/title_activity_stat" >
            <intent-filter>
                <action android:name="pg.is.projgr.STATYSTYKI" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        android:icon="@drawable/ramkablack"
        android:label="@string/app_name" >
        <receiver android:name="Widget" >
            <intent-filter >
                <action 
                    android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget" />
        </receiver>
    </application>

</manifest>